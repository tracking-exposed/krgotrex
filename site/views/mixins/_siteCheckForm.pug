mixin siteCheckForm(site = {})
  form(
    action=""
    class="row align-center"
    id="form-check-site"
    onsubmit="checkSite(event)"
  )
    fieldset(class="column")
      h3 #{i18n.__("formSiteCheckTitle")}
      .input-group
        input(
          id="form-check-site-input"
          type="text"
          name="site"
          class="input-group-field"
          placeholder!=i18n.__('formSiteCheckPlaceholder')
          tabindex="1"
          autofocus
        )
        .input-group-button
          button(
            type="submit"
            id="hero-cta"
            class="button"
          ) #{i18n.__("formSiteCheckButtonText")}
